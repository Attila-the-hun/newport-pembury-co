{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "brand": {
    "Newport Pembury & Co": {
      "description": "Refined Luxury design system tokens"
    }
  },
  "color": {
    "brand": {
      "charcoal":   { "value": "#1B2838", "type": "color", "description": "Primary brand dark" },
      "gold":       { "value": "#C5A55A", "type": "color", "description": "Primary accent / CTA" },
      "gold-light": { "value": "#D4C085", "type": "color", "description": "Hover / secondary accent" },
      "ivory":      { "value": "#F5F0E8", "type": "color", "description": "Light surface" },
      "slate":      { "value": "#6B7B8D", "type": "color", "description": "Secondary text" },
      "dark":       { "value": "#0F1923", "type": "color", "description": "Deepest dark" },
      "cream":      { "value": "#FAF8F4", "type": "color", "description": "Page background" }
    },
    "semantic": {
      "text-primary":   { "value": "{color.brand.charcoal}", "type": "color" },
      "text-secondary": { "value": "{color.brand.slate}", "type": "color" },
      "text-inverse":   { "value": "#FAFAFA", "type": "color" },
      "bg":             { "value": "#FFFFFF", "type": "color" },
      "bg-cream":       { "value": "{color.brand.cream}", "type": "color" },
      "border":         { "value": "rgba(27, 40, 56, 0.06)", "type": "color" },
      "success":        { "value": "#28A745", "type": "color" },
      "error":          { "value": "#DC3545", "type": "color" }
    }
  },
  "spacing": {
    "description": "8px grid system",
    "xs":  { "value": "0.25rem", "type": "spacing", "comment": "4px" },
    "sm":  { "value": "0.5rem",  "type": "spacing", "comment": "8px" },
    "md":  { "value": "1rem",    "type": "spacing", "comment": "16px" },
    "lg":  { "value": "1.5rem",  "type": "spacing", "comment": "24px" },
    "xl":  { "value": "2rem",    "type": "spacing", "comment": "32px" },
    "2xl": { "value": "3rem",    "type": "spacing", "comment": "48px" },
    "3xl": { "value": "4rem",    "type": "spacing", "comment": "64px" },
    "4xl": { "value": "6rem",    "type": "spacing", "comment": "96px" },
    "5xl": { "value": "8rem",    "type": "spacing", "comment": "128px" },
    "section-top":    { "value": "{spacing.5xl}", "type": "spacing", "comment": "Asymmetric: enter sections with more space" },
    "section-bottom": { "value": "{spacing.4xl}", "type": "spacing", "comment": "Asymmetric: tighter below sections" }
  },
  "shadow": {
    "sm":   { "value": "0 1px 2px rgba(0, 0, 0, 0.05)",      "type": "shadow" },
    "md":   { "value": "0 4px 12px rgba(0, 0, 0, 0.07)",     "type": "shadow" },
    "lg":   { "value": "0 10px 24px rgba(0, 0, 0, 0.1)",     "type": "shadow" },
    "xl":   { "value": "0 20px 48px rgba(0, 0, 0, 0.1)",     "type": "shadow" },
    "gold": { "value": "0 8px 24px rgba(197, 165, 90, 0.3)",  "type": "shadow" }
  },
  "radius": {
    "sm":   { "value": "4px",   "type": "borderRadius" },
    "md":   { "value": "8px",   "type": "borderRadius" },
    "lg":   { "value": "12px",  "type": "borderRadius" },
    "xl":   { "value": "16px",  "type": "borderRadius" },
    "full": { "value": "9999px","type": "borderRadius" }
  },
  "easing": {
    "smooth":  { "value": "cubic-bezier(0.4, 0, 0.2, 1)",    "type": "cubicBezier" },
    "out":     { "value": "cubic-bezier(0, 0, 0.58, 1)",     "type": "cubicBezier" },
    "in-out":  { "value": "cubic-bezier(0.42, 0, 0.58, 1)",  "type": "cubicBezier" },
    "spring":  { "value": "cubic-bezier(0.34, 1.56, 0.64, 1)","type": "cubicBezier" }
  },
  "typography": {
    "font-display": { "value": "'Cormorant Garamond', serif", "type": "fontFamily" },
    "font-body":    { "value": "'DM Sans', sans-serif",       "type": "fontFamily" },
    "rhythm":       { "value": "1.5rem", "type": "lineHeight" }
  }
}
